generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Juan {
  id              String      @id @default(auto()) @map("_id") @db.ObjectId
  email           String      @unique
  createdAt       DateTime    @default(now())
  emailVerified   DateTime?   @map("verifiedAt")
  @@map("users")
}